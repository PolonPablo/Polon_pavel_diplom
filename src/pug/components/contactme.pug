.contactme
    .container
        .contactme-background
        .contactme-content
            .title.contactme-header
                .contactme-title
                    h3.title__name Contact me
                    span.title__line
                    h2.title__text.contact-text Let me know if you want to talk about a potential collaboration. I'm available for freelance work.
                .contactme-email
                    a(href="https://it-shatle.by/").contactme-email__link
                        span.contactme-email__text infoname@mail.com

            form(action="#")
                input(type="text" name="form-text_1" placeholder="What's your name?")
                input(type="email" name="form-email" placeholder="Your email")
                input(type="text" name="form-text_3" placeholder="Tell me about your project")
                .button-file
                    button.form-btn Get a Quote
                    label.files
                        input(type="file" name="form-file").files__field
                        .form-imgs
                            img(src="./assets/imgs/clip.png", alt="").clip
                            img(src="./assets/imgs/clip_arrow.png", alt="")

